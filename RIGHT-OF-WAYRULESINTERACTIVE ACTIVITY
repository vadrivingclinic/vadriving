    <script>
        // Game State
        const gameState = {
            score: 0,
            maxScore: 100,
            activitiesCompleted: 0,
            totalActivities: 3,
            correctScenarios: 0,
            totalScenarios: 2,
            signalGameScore: 0,
            timingScore: 0,
            signalGameCompleted: false,
            startTime: null
        };

        // Timer Configuration
        let timerInterval;
        let totalSeconds = 0;

        // Signal Sequence Game State
        let currentTurn = 1;
        let currentDistance = 400;
        let carPosition = 50;
        let signalChoiceMade = false;
        let turnResults = [];

        // DOM Elements
        const timerDisplay = document.getElementById('timer-display');
        const timeSpentEl = document.getElementById('time-spent');
        const scoreDisplay = document.getElementById('score-display');
        const scenariosCompletedEl = document.getElementById('scenarios-completed');
        const accuracyRateEl = document.getElementById('accuracy-rate');
        const feedback1 = document.getElementById('feedback-1');
        const feedback2 = document.getElementById('feedback-2');
        const feedback3 = document.getElementById('feedback-3');
        const resultsPanel = document.getElementById('results-panel');
        const finalScore = document.getElementById('final-score');

        // Format time as MM:SS or HH:MM:SS
        function formatTime(seconds) {
            const hours = Math.floor(seconds / 3600);
            const minutes = Math.floor((seconds % 3600) / 60);
            const secs = seconds % 60;
            
            if (hours > 0) {
                return `${hours}:${minutes.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
            } else {
                return `${minutes}:${secs.toString().padStart(2, '0')}`;
            }
        }

        // Start the continuous timer
        function startTimer() {
            if (timerInterval) clearInterval(timerInterval);
            gameState.startTime = new Date();
            
            timerInterval = setInterval(function() {
                totalSeconds++;
                updateTimerDisplay();
                
                // Update timer appearance based on time
                const timerElement = document.getElementById('timer');
                if (totalSeconds >= 300 && totalSeconds < 600) { // 5-10 minutes
                    timerElement.classList.add('warning');
                    timerElement.classList.remove('critical');
                } else if (totalSeconds >= 600) { // 10 minutes or more
                    timerElement.classList.add('critical');
                    timerElement.classList.remove('warning');
                } else {
                    timerElement.classList.remove('warning', 'critical');
                }
            }, 1000);
        }

        // Update timer display
        function updateTimerDisplay() {
            const timeString = formatTime(totalSeconds);
            timerDisplay.textContent = timeString;
            timeSpentEl.textContent = timeString;
        }

        // Update game stats
        function updateStats() {
            scoreDisplay.textContent = gameState.score;
            scenariosCompletedEl.textContent = `${gameState.activitiesCompleted}/${gameState.totalActivities}`;
            
            const accuracy = (gameState.correctScenarios + gameState.signalGameScore + gameState.timingScore) > 0 
                ? Math.round(((gameState.correctScenarios * 15 + gameState.signalGameScore + gameState.timingScore) / 100) * 100)
                : 0;
            accuracyRateEl.textContent = `${accuracy}%`;
        }

        // Activity 1: Signal Sequence Game
        function initSignalSequenceGame() {
            const carContainer = document.getElementById('car-container');
            const turnIndicator = document.getElementById('turn-indicator');
            const turnPoints = [1, 2, 3];
            
            // Initialize game
            function resetGame() {
                currentTurn = 1;
                currentDistance = 400;
                carPosition = 50;
                signalChoiceMade = false;
                turnResults = [];
                
                // Reset UI
                carContainer.style.left = `${carPosition}px`;
                turnIndicator.classList.remove('active');
                document.getElementById('current-instruction').textContent = 'Approaching Turn Point 1';
                document.getElementById('distance-info').textContent = 'You are 400 feet away';
                
                // Reset turn points
                turnPoints.forEach(turn => {
                    const point = document.getElementById(`turn-point-${turn}`);
                    point.classList.remove('reached', 'current');
                    if (turn === 1) {
                        point.classList.add('current');
                    }
                });
                
                // Reset buttons
                ['signal-now', 'signal-later', 'no-signal'].forEach(id => {
                    document.getElementById(id).classList.remove('correct', 'incorrect');
                    document.getElementById(id).disabled = false;
                });
                
                document.getElementById('next-turn').disabled = true;
                feedback1.classList.remove('show');
                
                updateGameDisplay();
            }
            
            // Update game display
            function updateGameDisplay() {
                const distances = [400, 300, 200, 100, 0];
                const distanceIndex = Math.min(Math.floor((400 - currentDistance) / 100), 4);
                const displayDistance = distances[distanceIndex];
                
                document.getElementById('distance-info').textContent = `You are ${displayDistance} feet away from Turn Point ${currentTurn}`;
                
                // Update car position
                const newPosition = 50 + ((400 - currentDistance) / 400) * 300;
                carContainer.style.left = `${newPosition}px`;
                carPosition = newPosition;
            }
            
            // Make signal choice
            function makeSignalChoice(choice) {
                if (signalChoiceMade) return;
                
                signalChoiceMade = true;
                const buttons = ['signal-now', 'signal-later', 'no-signal'];
                let correctChoice = '';
                let score = 0;
                let feedback = '';
                let icon = 'üí°';
                
                // Determine correct choice based on distance
                if (currentDistance > 150) {
                    correctChoice = 'signal-later'; // Too early to signal
                    if (choice === 'signal-later') {
                        score = 10;
                        feedback = '‚úÖ Good choice! Signaling at 400+ feet is too early. Wait until about 100 feet before turning.';
                        icon = '‚úÖ';
                    } else if (choice === 'signal-now') {
                        score = 5;
                        feedback = '‚ö†Ô∏è Too early! Signaling this far in advance (400+ feet) can confuse other drivers.';
                        icon = '‚ö†Ô∏è';
                    } else {
                        score = 0;
                        feedback = '‚ùå You must signal before turning! Not signaling is dangerous and illegal.';
                        icon = '‚ùå';
                    }
                } else if (currentDistance >= 50 && currentDistance <= 150) {
                    correctChoice = 'signal-now'; // Perfect timing
                    if (choice === 'signal-now') {
                        score = 15;
                        feedback = 'üéØ Perfect! Signaling at 100 feet gives others ample warning. Excellent timing!';
                        icon = 'üéØ';
                    } else if (choice === 'signal-later') {
                        score = 5;
                        feedback = '‚ö†Ô∏è A bit late! You should signal at 100 feet, not wait until closer.';
                        icon = '‚ö†Ô∏è';
                    } else {
                        score = 0;
                        feedback = '‚ùå Dangerous! You must always signal before turning. This could cause an accident.';
                        icon = '‚ùå';
                    }
                } else {
                    correctChoice = 'signal-now'; // Late but still need to signal
                    if (choice === 'signal-now') {
                        score = 5;
                        feedback = '‚ö†Ô∏è Late, but better than nothing! Always signal at least 100 feet before turning.';
                        icon = '‚ö†Ô∏è';
                    } else if (choice === 'signal-later') {
                        score = 0;
                        feedback = '‚ùå Too late! You\'re already at the turn point. Signal much earlier next time.';
                        icon = '‚ùå';
                    } else {
                        score = 0;
                        feedback = '‚ùå Very dangerous! Turning without signaling is a major cause of accidents.';
                        icon = '‚ùå';
                    }
                }
                
                // Update button states
                buttons.forEach(buttonId => {
                    const button = document.getElementById(buttonId);
                    button.disabled = true;
                    if (buttonId === correctChoice) {
                        button.classList.add('correct');
                    } else if (buttonId === choice && buttonId !== correctChoice) {
                        button.classList.add('incorrect');
                    }
                });
                
                // Activate turn indicator
                if (choice === 'signal-now') {
                    turnIndicator.textContent = '‚¨ÖÔ∏è';
                    turnIndicator.classList.add('active');
                }
                
                // Update game state
                turnResults.push({
                    turn: currentTurn,
                    choice: choice,
                    correct: choice === correctChoice,
                    score: score,
                    distance: currentDistance
                });
                
                gameState.score += score;
                gameState.signalGameScore += score;
                
                // Show feedback
                document.getElementById('feedback-icon-1').textContent = icon;
                document.getElementById('feedback-title-1').textContent = `Turn Point ${currentTurn} Complete`;
                document.getElementById('feedback-content-1').innerHTML = `
                    ${feedback}<br><br>
                    <strong>Distance when you chose:</strong> ${currentDistance} ft<br>
                    <strong>Points earned:</strong> +${score}<br>
                    <strong>Key Rule:</strong> Signal 100 feet before turning
                `;
                feedback1.classList.add('show');
                
                // Enable next turn button
                document.getElementById('next-turn').disabled = false;
                
                updateStats();
            }
            
            // Move to next turn
            function nextTurn() {
                if (!signalChoiceMade) return;
                
                // Mark current turn point as reached
                document.getElementById(`turn-point-${currentTurn}`).classList.remove('current');
                document.getElementById(`turn-point-${currentTurn}`).classList.add('reached');
                
                // Move to next turn
                currentTurn++;
                
                if (currentTurn > 3) {
                    // Game complete
                    gameState.activitiesCompleted++;
                    gameState.signalGameCompleted = true;
                    
                    document.getElementById('current-instruction').textContent = 'Game Complete!';
                    document.getElementById('distance-info').textContent = 'All turn points completed';
                    document.getElementById('next-turn').disabled = true;
                    
                    // Show final feedback
                    const totalScore = turnResults.reduce((sum, result) => sum + result.score, 0);
                    const correctTurns = turnResults.filter(result => result.correct).length;
                    
                    document.getElementById('feedback-icon-1').textContent = 'üèÅ';
                    document.getElementById('feedback-title-1').textContent = 'Game Complete!';
                    document.getElementById('feedback-content-1').innerHTML = `
                        üéâ Excellent driving practice!<br><br>
                        <strong>Final Score:</strong> ${totalScore} points<br>
                        <strong>Turns Correct:</strong> ${correctTurns}/3<br>
                        <strong>Key Takeaways:</strong><br>
                        ‚Ä¢ Always signal 100 feet before turning<br>
                        ‚Ä¢ Consistent signaling prevents accidents<br>
                        ‚Ä¢ Practice makes perfect timing!
                    `;
                    feedback1.classList.add('show');
                } else {
                    // Reset for next turn
                    currentDistance = 400;
                    signalChoiceMade = false;
                    document.getElementById(`turn-point-${currentTurn}`).classList.add('current');
                    document.getElementById('current-instruction').textContent = `Approaching Turn Point ${currentTurn}`;
                    
                    // Reset buttons
                    ['signal-now', 'signal-later', 'no-signal'].forEach(id => {
                        document.getElementById(id).classList.remove('correct', 'incorrect');
                        document.getElementById(id).disabled = false;
                    });
                    
                    document.getElementById('next-turn').disabled = true;
                    turnIndicator.classList.remove('active');
                    feedback1.classList.remove('show');
                    
                    updateGameDisplay();
                }
            }
            
            // Event listeners
            document.getElementById('signal-now').addEventListener('click', () => makeSignalChoice('signal-now'));
            document.getElementById('signal-later').addEventListener('click', () => makeSignalChoice('signal-later'));
            document.getElementById('no-signal').addEventListener('click', () => makeSignalChoice('no-signal'));
            document.getElementById('next-turn').addEventListener('click', nextTurn);
            document.getElementById('reset-game').addEventListener('click', resetGame);
            
            // Simulate distance decreasing
            setInterval(() => {
                if (!signalChoiceMade && currentDistance > 0) {
                    currentDistance -= 5;
                    updateGameDisplay();
                }
            }, 500);
            
            // Start the game
            resetGame();
        }

        // Activity 2: Right-of-Way Scenarios
        function initScenarios() {
            const correctAnswers = {
                1: 'B', // Yield to vehicle on right
                2: 'B'  // Yield to pedestrian
            };
            
            let selectedAnswers = {};
            
            // Scenario option selection
            document.querySelectorAll('.scenario-option').forEach(option => {
                option.addEventListener('click', function() {
                    const scenario = this.dataset.scenario;
                    const answer = this.dataset.option;
                    
                    // Remove selected class from other options in same scenario
                    document.querySelectorAll(`.scenario-option[data-scenario="${scenario}"]`)
                        .forEach(opt => opt.classList.remove('selected'));
                    
                    // Add selected class to clicked option
                    this.classList.add('selected');
                    selectedAnswers[scenario] = answer;
                });
            });
            
            // Check answers
            document.getElementById('check-scenarios').addEventListener('click', function() {
                let correctCount = 0;
                let totalSelected = Object.keys(selectedAnswers).length;
                
                if (totalSelected === 0) {
                    document.getElementById('feedback-icon-2').textContent = 'ü§î';
                    document.getElementById('feedback-title-2').textContent = 'No Answers Selected';
                    document.getElementById('feedback-content-2').textContent = 'Please select answers for the scenarios before checking.';
                    feedback2.classList.add('show');
                    return;
                }
                
                // Check each scenario
                for (const [scenario, userAnswer] of Object.entries(selectedAnswers)) {
                    const correctAnswer = correctAnswers[scenario];
                    const optionElement = document.querySelector(`.scenario-option[data-scenario="${scenario}"][data-option="${userAnswer}"]`);
                    
                    if (userAnswer === correctAnswer) {
                        correctCount++;
                        optionElement.classList.add('correct');
                    } else {
                        optionElement.classList.add('incorrect');
                        // Highlight correct answer
                        const correctOption = document.querySelector(`.scenario-option[data-scenario="${scenario}"][data-option="${correctAnswer}"]`);
                        if (correctOption) {
                            correctOption.classList.add('correct');
                        }
                    }
                }
                
                // Calculate score
                const scenarioScore = correctCount * 15;
                gameState.score += scenarioScore;
                gameState.correctScenarios = correctCount;
                gameState.activitiesCompleted++;
                
                // Show feedback
                const percentage = Math.round((correctCount / gameState.totalScenarios) * 100);
                document.getElementById('feedback-icon-2').textContent = percentage >= 70 ? '‚úÖ' : 'üìö';
                document.getElementById('feedback-title-2').textContent = `Scenario Results: ${correctCount}/${gameState.totalScenarios} Correct`;
                document.getElementById('feedback-content-2').innerHTML = `
                    ${correctCount === gameState.totalScenarios ? 'üéâ Excellent! All answers correct!' : 
                      correctCount >= gameState.totalScenarios * 0.5 ? 'üëç Good job! Review the incorrect answers.' :
                      'üìö Review the right-of-way rules and try again.'}
                    <br><br>
                    <strong>Score:</strong> +${scenarioScore} points<br>
                    <strong>Key Takeaways:</strong><br>
                    ‚Ä¢ At four-way stops, yield to vehicles on your right<br>
                    ‚Ä¢ Always yield to pedestrians in crosswalks<br>
                    ‚Ä¢ Emergency vehicles always have right-of-way<br>
                    ‚Ä¢ When in doubt, yield - it's safer than being right
                `;
                feedback2.classList.add('show');
                
                updateStats();
                
                // Disable further selection
                document.querySelectorAll('.scenario-option').forEach(opt => {
                    opt.style.pointerEvents = 'none';
                });
                document.getElementById('check-scenarios').disabled = true;
            });
        }

        // Activity 3: Signal Timing Challenge
        function initTimingChallenge() {
            let timingInterval;
            let currentDistance = 400; // Start 400 feet away
            let hasActivated = false;
            let timingScore = 0;
            
            // Start the timing challenge
            function startTimingChallenge() {
                clearInterval(timingInterval);
                currentDistance = 400;
                hasActivated = false;
                timingScore = 0;
                document.getElementById('distance-display').textContent = `${currentDistance} ft`;
                document.getElementById('distance-display').style.color = '#3b82f6';
                document.getElementById('timing-fill').style.width = '0%';
                document.getElementById('signal-now-btn').disabled = false;
                feedback3.classList.remove('show');
                
                timingInterval = setInterval(() => {
                    if (currentDistance <= 0) {
                        clearInterval(timingInterval);
                        if (!hasActivated) {
                            evaluateTiming(0);
                        }
                        return;
                    }
                    
                    currentDistance -= 10;
                    document.getElementById('distance-display').textContent = `${Math.max(0, currentDistance)} ft`;
                    
                    // Update progress bar
                    const progress = ((400 - currentDistance) / 400) * 100;
                    document.getElementById('timing-fill').style.width = `${progress}%`;
                    
                    // Change color based on distance
                    if (currentDistance <= 150 && currentDistance >= 50) {
                        document.getElementById('distance-display').style.color = '#10b981';
                    } else if (currentDistance < 50) {
                        document.getElementById('distance-display').style.color = '#ef4444';
                    }
                }, 200);
            }
            
            // Activate signal button
            document.getElementById('signal-now-btn').addEventListener('click', function() {
                if (hasActivated) return;
                
                hasActivated = true;
                clearInterval(timingInterval);
                evaluateTiming(currentDistance);
            });
            
            // Evaluate timing
            function evaluateTiming(distance) {
                let feedback = '';
                let icon = '‚è∞';
                
                if (distance >= 150) {
                    feedback = '‚ö†Ô∏è Too early! Signaling too far in advance (400+ feet) can confuse other drivers. Aim for 100 feet (3-4 seconds before turning).';
                    icon = '‚ö†Ô∏è';
                    timingScore = 5;
                } else if (distance >= 50 && distance <= 150) {
                    const diff = Math.abs(distance - 100);
                    if (diff <= 25) {
                        feedback = 'üéØ Perfect timing! 100 feet (3-4 seconds) gives others ample warning without causing confusion. Excellent!';
                        icon = 'üéØ';
                        timingScore = 25;
                    } else if (diff <= 50) {
                        feedback = 'üëç Good timing! Within the acceptable range. Practice hitting exactly 100 feet for perfect signaling.';
                        icon = 'üëç';
                        timingScore = 15;
                    } else {
                        feedback = '‚ö†Ô∏è Close! Aim for exactly 100 feet before the intersection for optimal signaling.';
                        icon = '‚ö†Ô∏è';
                        timingScore = 10;
                    }
                } else {
                    feedback = '‚ö†Ô∏è Too late! Signaling at the last moment doesn\'t give others time to react safely. This is dangerous!';
                    icon = '‚ö†Ô∏è';
                    timingScore = 5;
                }
                
                // Update game state
                gameState.score += timingScore;
                gameState.timingScore = timingScore;
                gameState.activitiesCompleted++;
                
                // Show feedback
                document.getElementById('feedback-icon-3').textContent = icon;
                document.getElementById('feedback-title-3').textContent = 'Timing Evaluation';
                document.getElementById('feedback-content-3').innerHTML = `
                    ${feedback}<br><br>
                    <strong>Distance when signaled:</strong> ${distance} ft<br>
                    <strong>Score:</strong> +${timingScore} points<br>
                    <strong>Target:</strong> 100 ft (perfect timing)
                `;
                feedback3.classList.add('show');
                
                // Disable button
                document.getElementById('signal-now-btn').disabled = true;
                
                updateStats();
            }
            
            // Reset button
            document.getElementById('reset-timing').addEventListener('click', startTimingChallenge);
            
            // Start the challenge
            startTimingChallenge();
        }

        // Show final results
        function showResults() {
            const completionPercentage = Math.round((gameState.activitiesCompleted / gameState.totalActivities) * 100);
            
            // Calculate final score
            const maxPossibleScore = 100;
            const finalScorePercentage = Math.min(Math.round((gameState.score / maxPossibleScore) * 100), 100);
            
            // Update results display
            document.getElementById('final-score').textContent = `${finalScorePercentage}%`;
            document.getElementById('result-scenarios').textContent = `${gameState.activitiesCompleted}/${gameState.totalActivities}`;
            document.getElementById('result-time').textContent = formatTime(totalSeconds);
            document.getElementById('result-accuracy').textContent = `${finalScorePercentage}%`;
            
            // Show results panel
            resultsPanel.classList.add('show');
            resultsPanel.scrollIntoView({ behavior: 'smooth' });
        }

        // Reset all activities
        function resetAll() {
            // Reset game state
            gameState.score = 0;
            gameState.activitiesCompleted = 0;
            gameState.correctScenarios = 0;
            gameState.signalGameScore = 0;
            gameState.timingScore = 0;
            gameState.signalGameCompleted = false;
            
            // Reset timer
            totalSeconds = 0;
            updateTimerDisplay();
            
            // Reset UI
            document.querySelectorAll('.feedback-container').forEach(fb => fb.classList.remove('show'));
            document.querySelectorAll('.scenario-option').forEach(opt => {
                opt.classList.remove('selected', 'correct', 'incorrect');
                opt.style.pointerEvents = 'auto';
            });
            
            // Re-enable scenario check button
            document.getElementById('check-scenarios').disabled = false;
            
            // Hide results
            resultsPanel.classList.remove('show');
            
            // Restart all games
            initSignalSequenceGame();
            initScenarios();
            initTimingChallenge();
            
            updateStats();
        }

        // Initialize everything
        document.addEventListener('DOMContentLoaded', function() {
            // Start timer
            startTimer();
            
            // Initialize activities
            initSignalSequenceGame();
            initScenarios();
            initTimingChallenge();
            
            // Event listeners for action buttons
            document.getElementById('reset-all').addEventListener('click', resetAll);
            document.getElementById('view-results').addEventListener('click', showResults);
            document.getElementById('retry-btn').addEventListener('click', resetAll);
            
            // Initial stats update
            updateStats();
        });
    </script>
</body>
</html>
